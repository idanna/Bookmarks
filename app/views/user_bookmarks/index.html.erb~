<%= form_for(@bookmark) do |f| %>
  <div class="field">
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<% if @bookmarks.empty? %>
	</br >
	<%= flash[:notice] %>
	<h2> You dont have any bookmarks yet </h2>
<% else %>
	<%= render 'bookmarks_list' %>
<% end %>
