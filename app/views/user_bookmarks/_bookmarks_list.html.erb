<h2> List of all your bookmark </h2>
<%= form_tag(multi_destroy_user_bookmarks_path, :method => "post") do %>
<table>
  <tr>
    <th>Mark</th>
    <th>Link</th>
    <th></th>
  </tr>
<p> <%= flash[:notice] %> </p>
	<% @bookmarks.each do |bookmark| %>
		<% abs_link = bookmark.link %>
		<% abs_link = "http://" + bookmark.link unless bookmark.link.match(/(http|https):\/\//) %>
		<tr>
			<td><%= check_box_tag("delete[#{bookmark.id}]",bookmark.id) %></td>
		  <td><%= link_to bookmark.link, abs_link, :target => "_blank"
 %></td>
		  <td><%= link_to 'Delete', user_bookmark_path(bookmark.id), :confirm => 'Are you sure?', :method => :delete %></td>
		</tr>
	<% end %>
</table>

	<br />
  <%= submit_tag("Delete Selected", :confirm => 'Are you sure?') %>
<% end %>
<br /> 

